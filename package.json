{
  "name": "echoes-compress",
  "version": "0.0.1",
  "description": "Service to compress daily folders generated by Echoes",
  "main": "index.js",
  "scripts": {
    "local": "SERVICE_ENV=local node index.js",
    "start": "node index.js",
    "test:report": "cross-env NODE_ENV=test jest --detectOpenHandles --forceExit --coverage",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles --forceExit --reporters=default",
    "prod:up": "bash -c 'docker-compose --file docker-compose.yml --project-name echoes-compress up -d --force-recreate --build'",
    "prod:down": "bash -c 'docker-compose --file docker-compose.yml --project-name echoes-compress stop'",
    "lint": "eslint .",
    "manifest": "node_modules/make-manifest/bin/make-manifest",
    "qa": "npm run lint && npm run test",
    "precommit": "npm run lint",
    "prepush": "npm run test",
    "postinstall": "node_modules/.bin/eslint . --fix"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint",
      "pre-push": "npm run test"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@types/jest": "^26.0.15",
    "chai": "^4.2.0",
    "eslint": "^6.7.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^24.0.0",
    "expect.js": "^0.3.1",
    "husky": "^3.1.0",
    "jest": "^26.4.2",
    "jest-config": "^26.4.2",
    "jest-junit": "^11.1.0",
    "make-manifest": "^1.0.1",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "archiver": "^5.1.0",
    "body-parser": "^1.19.0",
    "boom": "^7.3.0",
    "bunyan": "^1.8.12",
    "chalk": "^3.0.0",
    "confabulous": "^1.7.0",
    "cron": "^1.8.2",
    "cross-env": "^7.0.3",
    "debug": "^4.1.1",
    "express-swagger-generator": "^1.1.15",
    "fs-extra": "^9.0.1",
    "hogan.js": "^3.0.2",
    "make-manifest": "^1.0.1",
    "on-headers": "^1.0.2",
    "optimist": "^0.6.1",
    "optional": "^0.1.4",
    "prepper": "^1.2.0",
    "ramda": "^0.26.1",
    "systemic": "^3.3.0",
    "systemic-domain-runner": "^1.1.0",
    "systemic-express": "^1.1.1"
  }
}
